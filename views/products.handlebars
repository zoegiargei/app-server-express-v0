<section class="container-fluid mt-5 animate__animated animate__fadeIn animate__delay-0.5s">

    <h1 class="h1 p-2 d-flex justify-content-center" >Products</h1>

    {{#if thIsProducts}}

        {{#each products}}

            <div class="p-2 m-4" id="divProducts">

                <ul class="list-group" id={{this._id}}>
                    <li class="list-group-item list-group-item-action active" aria-current="true" ><h5>Product: {{ this.title }}</h5></li>
                    <li class="list-group-item list-group-item-action" >Description: {{this.description}}</li>
                    <li class="list-group-item list-group-item-action" >Code: {{this.code}}</li>
                    <li class="list-group-item list-group-item-action" >Price: {{this.price}}</li>
                    <li class="list-group-item list-group-item-action" >Status: {{this.status}}</li>
                    <li class="list-group-item list-group-item-action" >Stock: {{this.stock}}</li>
                    <li class="list-group-item list-group-item-action" >Category: {{this.category}}</li>
                    <li class="list-group-item list-group-item-action" ><img src={{this.thumbnail}} alt=""></li>
                </ul>

                <form action="/web/products/product/{{this._id}}" id="seeProduct">
                    <button type="button" class="btn btn-primary p-2 m-2" id="prod" onclick="seeProduct(event)" value={{this._id}}> <i class="bi bi-eye" style="font-size: 1.5em;"></i> </button>
                </form>

                <button type="button" class="btn btn-primary p-2 m-2 btnProductDetails" id="btnProductDetails" productId={{this._id}}>See product</button>
            </div>

        {{/each}}

    {{else}}
        <h3 class="h1 p-2 d-flex justify-content-center" >There aren't products</h3>
    {{/if}}

    <section class="container-fluid d-flex justify-content-center navigation">

        <div class="row">

            <div class="col-12 d-flex flex-row align-items-center">

                <nav aria-label="...">
                    <ul class="pagination">

                        {{#if prevLink}}
                            <li class="page-item">
                                <a class="page-link" href={{prevLink}}>Previous</a>
                            </li>
                        {{else}}
                            <li class="page-item disabled">
                                <a class="page-link" href={{prevLink}}>Previous</a>
                            </li>
                        {{/if}}

                        <li class="page-item"><a class="page-link" href="#">{{numberPage}}</a></li>

                        {{#if nextLink}}
                            <li class="page-item">
                                <a class="page-link" href={{nextLink}}>Next</a>
                            </li>                            
                        {{else}}
                            <li class="page-item disabled">
                                <a class="page-link" href={{nextLink}}>Next</a>
                            </li>
                        {{/if}}

                    </ul>
                </nav>

            </div>

        </div>

    </section>

</section>


