<div class="container-fluid text-center overflow-hidden">
    <div class="row g-2 d-flex flex-column">

        <section class="col-6 row p-3 mx-auto">

            <h1>Welcome {{user.username}}!!!</h1>
            <i class="bi bi-person-circle" style="font-size: 5em; color: cornflowerblue;"></i>
        </section>

        <section class="col-6 row p-3 mx-auto">

            <ul>
                <li>Username: {{user.username}}</li>
                {{#if user.email}}
                    <li>Email: {{user.email}}</li>
                {{/if}}
                <li>role: {{user.role}}</li>
            </ol>
        </section>

        {{#if user.cart}}
            <section class="col-6 row p-3 mx-auto">

                <form action="/api/carts/cartById" id="cartForm" class="col-12">
                    <button type="submit" class="btn btn-success row">
                        <i class="bi bi-cart3"></i>
                        <p>Cart</p>
                    </button>
                </form>
            </section>
        {{/if}}

        <section class="col-6 row p-3 mx-auto">

            <form id="logoutForm" class="col-12">
                <button type="submit" class="btn btn-danger row" id="btnLogout">
                    <i class="bi bi-person-circle btnUserIcon"></i>
                    <p>Logout</p>
                </button>
            </form>
        </section>
    </div>
</div>

