<div class="container-fluid mt-5 d-flex flex-column justify-content-center text-center overflow-hidden animate__animated animate__fadeIn animate__delay-0.5s">

    <div class="row g-2 d-flex flex-column justify-content-center">

        <section class="col-10 row p-3 mx-auto">

            <h1 class="h1">Welcome {{user.username}}!!!</h1>
            <i class="bi bi-person-circle" style="font-size: 5em; color: cornflowerblue;"></i>
        </section>

        <section class="col-6 row p-3 mx-auto">

            <ul>
                <li>Username: {{user.username}}</li>
                {{#if user.email}}
                    <li>Email: {{user.email}}</li>
                {{/if}}
                <li>role: {{user.role}}</li>
            </ol>
        </section>

        <section class="col-6 row p-3 mx-auto">

            <form id="logoutForm" class="col-12">
                <button type="submit" class="btn btn-danger row" id="btnLogout">
                    <i class="bi bi-person-circle btnUserIcon"></i>
                    <p>Logout</p>
                </button>
            </form>
        </section>
    </div>
    <div class="row g-2 d-flex flex-column justify-content-center">
        <h1>
            <form action="/api/user/passwordReset" method="post" id="formResetPassword">
                <button type="submit" class="btn btn-warning-emphasis">Reset Password</button>
            </form>
        </h1>
    </div>
</div>

