<section class="container mx-auto" style="width: 100%;">

    <h1 class="h1 p-5">Add Products</h1>

    <section class="p-5 mx-auto" style="width: 80%;">

        <h1>Add to New Product - byFetch</h1>

        <form id="formAddProduct" enctype="multipart/form-data" method="post">

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" aria-describedby="Title" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input type="text" class="form-control" id="description" name="description" required>
            </div>

            <div class="mb-3">
                <label for="code" class="form-label">Code</label>
                <input type="text" class="form-control" id="code" name="code" required>
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="text" class="form-control" id="price" name="price" required>
            </div>

            <div class="mt-3 mb-3">
                <select class="form-select form-select-sm" aria-label=".form-select-sm">
                    <option selected>Status</option>
                    <option value="true">Available</option>
                    <option value="false">Unavailable</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="stock" class="form-label">Stock</label>
                <input type="number" class="form-control" id="stock" name="stock" required>
            </div>

            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <input type="text" class="form-control" id="category" name="category" required>
            </div>

            <div class="mb-3">
                <label for="thumbnail" class="form-label">Thumbnail</label>
                <input type="file" class="form-control" id="file_thumbnail" name="file_thumbnail" required>
            </div>

            <button type="submit" class="btn btn-primary">Add Product</button>
        
        </form>

    </section>
</section>

