<section class="container-fluid p-3 formRegisterContainer">

    <div class="col-6 mx-auto animate__animated animate__fadeIn animate__delay-0.5s">

        <h1 class="mt-5">Join up</h1>

        <form id="registerForm" class="p-3">
        
            <div class="mb-3">
                <label for="firstName" class="form-label">First Name</label>
                <input type="text" class="form-control" id="firstName" name="firstName" aria-describedby="nameHelp">
                <div id="nameHelp" class="form-text">My name is...</div>
                <!--<div class="invalid-feedback" style="display: none;" id="invalid_firstName">Please choose a first name</div>-->
            </div>

            <div class="mb-3">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="lastName" name="lastName" aria-describedby="lastNameHelp">
                <div id="nameHelp" class="form-text">My last name is...</div>
            </div>

            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" name="regEmail" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            
            <div class="mb-3">
                <label for="age" class="form-label">Age</label>
                <input type="number" class="form-control" id="age" name="age" aria-describedby="ageHelp">
                <div id="ageHelp" class="form-text">30</div>
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" id="registerPassword" name="regPassword" placeholder="example: 'wMH432595@'">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        
        <h5>Do you have an account? <a href="/web/session/login/" style="color: blue;"> >>> Login </a></h1>
    </div>

</section>

<script src="/js/register.js"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>


